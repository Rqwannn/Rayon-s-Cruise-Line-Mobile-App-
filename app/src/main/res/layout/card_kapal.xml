<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="7dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/id_kapal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:id="@+id/btn_detail_ship"
            android:layout_width="60dp"
            app:iconSize="25dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:icon="@drawable/ic_baseline_south_24"
            android:layout_height="match_parent">

        </com.google.android.material.button.MaterialButton>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gambar_kapal"
            android:layout_marginLeft="20dp"
            android:src="@drawable/kapal"
            android:layout_toRightOf="@+id/btn_detail_ship"
            android:layout_centerVertical="true"
            android:layout_width="65dp"
            android:layout_height="65dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gambar_kapal"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nama_kapal"
                android:text="MSC Preziosa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/kelas_pelayaran"
                android:layout_marginTop="7dp"
                android:text="Mewah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>